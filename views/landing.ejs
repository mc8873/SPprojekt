<!DOCTYPE html>
<html>
<link rel="stylesheet" type="text/css" href="../public/stylesheets/landing.css">
<link rel="icon" href="../public/icons/favicon2.png">
<meta http-equiv="Content-Type" content="text/html;charset=utf-8">
<script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script> 
<title>Radovednez</title>
	<body>
		<header>
		<div class="headerBackground">
		<div class="centrirano">
			<div class="logo"><a href=""><img src="../public/icons/logo2.png" alt="logo"/></a></div>
			<form>
  				<input class="iskalnik" type="text" name="iskalnik" placeholder="Isci...">
			</form>
			<a href="/vprasaj" class="gumb">vprašaj</a>
			<% if (username == null) {%>
			<a href="/login" class="gumb">vpis</a>
			<a href="/registration" class="gumb">registracija</a>
			<% } else { %>
			<a href="/logout" class="gumb">izpis</a>
			<a href="" class="gumb"><%= username %></a>
			<% } %>
		</div>
		</div>
		</header>
		<div class ="main">
			<ul class="tab">
			 	<li><a href="/" class="tabs" onclick="odpriTab(event, 'vsehcasov')" id ="vsehvcasovTab">vseh časov</a></li>
			 	<li><a href="/meseca" class="tabs" onclick="odpriTab(event, 'meseca')" id="mesecaTab">meseca</a></li>
			 	<li><a href="/tedna" class="tabs" onclick="odpriTab(event, 'tedna')" id ="tednaTab">tedna</a></li>
			  	<li><a href="/novo" class="tabs" onclick="odpriTab(event, 'novo')" id ="novoTab">novo</a></li>
			  	<li><p class = "bold"> Razvrsti vpršanja </p></li>
			</ul>
			<div id="trenutno" class="vsebinaTab">
			<% seznamVprasanj.forEach(function(vprasanje) { %>
				<div class ="vprasanje">
				<% var vprasanje_vsebina = vprasanje.dataValues.vprasanje_objave; %>
				<% var vsebina = vprasanje.dataValues.vsebina_objave; %>
				<% var vseckov = vprasanje.dataValues.vseckov; %>
				<% var vprasanjeId = vprasanje.dataValues.id; %>
				<table>
						<tr>
							<td class="votecell">
								<img class = "voteimg" src="../public/icons/like.svg" alt="like"/>
								<span><%=vseckov %></span>
								<img class = "voteimg" src="../public/icons/dislike.svg" alt="like"/>
							</td>
							<td class="questcell">
								<article>
									<h2> <a href="/vprasanje/<%= vprasanjeId%>"><%=vprasanje_vsebina %></a> </h2>
									<p> <%=vsebina %></p>
								</article>
							</td>
						</tr>
						<tr>
							<td>
							</td>
						</tr>
					</table>
				</div>
			<% }); %>
				
			</div>
		</div>
	<footer>
	<div class="headerBackground">
      <div class="centrirano">
      	<div class="footerContent">
        <a href="/login">Prijava</a> | 
        <a href="/registration">Registracija</a> |
        <a href="/vprasaj">Vprašaj</a><br>
        Avtor: Matevž Cesar
        </div> 
        </div>
      </div>
    </footer>
	<script src="../public/js/landing.js"></script>
	</body>
</html>